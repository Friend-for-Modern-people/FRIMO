<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_recommend_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/imageView_recommend_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_recommend_friend"
        android:backgroundTint="@color/purple1"
        android:scaleType="centerCrop"
        android:src="@drawable/img_character3"
        app:layout_aspectRatio="100%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/textview_recommend_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_recommend_friend"
        android:backgroundTint="@color/gray3"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="추천 친구"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>