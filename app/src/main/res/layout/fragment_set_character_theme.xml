<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@id/textview_text_character_theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/textview_text_character_theme"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/textview_text_character_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="케릭터 테마"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textview_text_set_character_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="캐릭터 테마 설정"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="@id/button_back"
                app:layout_constraintTop_toBottomOf="@id/textview_text_character_theme"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textview_theme1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="차분"
                android:textColor="@color/gray5"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/textview_text_set_character_theme"
                app:layout_constraintTop_toBottomOf="@id/textview_text_set_character_theme"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textview_theme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="사투리"
                android:textColor="@color/gray5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/textview_theme1"
                app:layout_constraintStart_toEndOf="@id/textview_theme1"
                app:layout_constraintTop_toTopOf="@id/textview_theme1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textview_theme3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/shape_border_fac883"
                android:padding="3dp"
                android:text="따뜻함"
                android:textColor="@color/skin"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/textview_theme1"
                app:layout_constraintStart_toEndOf="@id/textview_theme2"
                app:layout_constraintTop_toTopOf="@id/textview_theme1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textview_theme4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="팩폭"
                android:textColor="@color/gray5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/textview_theme1"
                app:layout_constraintStart_toEndOf="@id/textview_theme3"
                app:layout_constraintTop_toTopOf="@id/textview_theme1"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/boundary"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/gray6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_theme1" />

            <LinearLayout
                android:id="@+id/textview_friend_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/textview_text_set_character_theme"
                app:layout_constraintTop_toBottomOf="@id/boundary">

                <TextView
                    android:id="@+id/textview_friend_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="명의 "
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="따뜻한"
                    android:textColor="@color/skin"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 친구들이 있어요"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_friend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_friend_recommend"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/view_friends" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>